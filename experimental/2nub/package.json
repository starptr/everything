{
  "name": "1nub",
  "version": "1.0.0",
  "description": "One Night Ultimate Werewolf implementation using boardgame.io",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsc --build && node dist/server/index.js",
    "dev:client": "parcel src/client/index.html --port 3000",
    "build": "tsc --build && parcel build src/client/index.html --dist-dir dist/client --public-url ./",
    "start": "node dist/server/index.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^5.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ws": "^8.15.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/supertest": "^2.0.12",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.0.0",
    "jest": "^29.5.0",
    "parcel": "^2.9.0",
    "process": "^0.11.10",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  }
}
