{
  "name": "1nub-werewolf",
  "version": "1.0.0",
  "description": "One Night Ultimate Werewolf - Full Stack Game",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "ts-node src/server/server.ts",
    "server:build": "tsc",
    "server:start": "node dist/server/server.js",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:install": "cd client && npm install",
    "build": "npm run server:build && npm run client:build",
    "install:all": "npm install && npm run client:install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:server": "jest src/server",
    "test:roles": "jest src/server/roles"
  },
  "dependencies": {
    "boardgame.io": "0.45.0",
    "express": "^4.18.0",
    "cors": "^2.8.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "concurrently": "^8.2.0",
    "jest": "^29.5.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "nodemon": "^3.0.0"
  },
  "author": "",
  "license": "ISC"
}