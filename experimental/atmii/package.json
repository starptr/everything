{
  "name": "atmii",
  "version": "0.0.1",
  "description": "Mii viewer and editor for the ATmosphere",
  "author": "",
  "license": "",
  "private": true,
  "scripts": {
    "dev": "pnpm dev:client",
    "dev:lexicon": "pnpm --filter @atmii/lexicon dev",
    "dev:client": "pnpm --filter @atmii/client dev",
    "lexgen": "pnpm -r lexgen",
    "build": "pnpm build:lexicon && pnpm build:client",
    "build:lexicon": "pnpm --filter @atmii/lexicon build",
    "build:client": "pnpm --filter @atmii/client build",
    "start:dev": "pnpm -r start",
    "start:client": "pnpm --filter @atmii/client start",
    "clean": "pnpm -r clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@atproto/lex-cli": "^0.6.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "concurrently": "^9.1.2",
    "prettier": "^3.5.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2"
  },
  "packageManager": "pnpm@9.15.4+sha512.b2dc20e2fc72b3e18848459b37359a32064663e5627a51e4c74b2c29dd8e8e0491483c3abb40789cfd578bf362fb6ba8261b05f0387d76792ed6e23ea3b1b6a0"
}
